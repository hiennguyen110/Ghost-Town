<%include header%>
<body>
<!-- tt-mobile menu -->

<%include nav%>

<main id="tt-pageContent">
    <div class="container">
        <div class="tt-single-topic-list">
            <div class="tt-item">
                 <div class="tt-single-topic">
                    <div class="tt-item-header">
                        <div class="tt-item-info info-top">
                            <div class="tt-avatar-icon">
                                <i class="tt-icon"><svg><use xlink:href="<%=nameSymbol%>"></use></svg></i>
                            </div>
                            <div class="tt-avatar-title">
                               <a href="#"><%= topic.post_author%></a>
                            </div>
                            <a href="#" class="tt-info-time">
                                <i class="tt-icon"><svg><use xlink:href="#icon-time"></use></svg></i><%= topic.post_date %>
                            </a>
                        </div>
                        <h3 class="tt-item-title">
                            <a href="#"><%= topic.post_title%></a>
                        </h3>
                        <div class="tt-item-tag">
                            <ul class="tt-list-badge">
                                <% for (var counter = 0; counter < tags[0].length; ++counter) {%>
                                <li><a href="#"><span class="tt-color03 tt-badge"><%= tags[0][counter] %></span></a></li>
                                <% } %>
                            </ul>
                        </div>
                    </div>
                    <div class="tt-item-description">
                        <h6 class="tt-title"><%= topic.post_content%></h6>
                    </div>
                </div>
            </div>

            <div class="tt-wrapper-inner">
                <h4 class="tt-title-separator"><span>This is the comments section</span></h4>
            </div>

            <% for (var comment_counter = 0; comment_counter < comments.length; ++comment_counter) { %>
                <div class="tt-item tt-wrapper-success">
                        <div class="tt-single-topic">
                            <div class="tt-item-header pt-noborder">
                               <div class="tt-item-info info-top">
                                   <div class="tt-avatar-icon">
                                       <i class="tt-icon"><svg><use xlink:href="<%=commentSymbol[comment_counter]%>"></use></svg></i>
                                   </div>
                                   <div class="tt-avatar-title">
                                      <a href="#"><%=comments[comment_counter].comment_author%></a>
                                   </div>
                                   <a href="#" class="tt-info-time">
                                       <i class="tt-icon"><svg><use xlink:href="#icon-time"></use></svg></i>
                                       <!-- This is the time when the comment was made -->
                                       <%=comments[comment_counter].comment_date%>
                                   </a>
                               </div>
                           </div>

                           <div class="tt-item-description">
                                <h6 class="tt-title"><%=comments[comment_counter].comment_content%></h6>
                            </div>

                           <div class="tt-item-info info-bottom">
                               <a href="#" class="tt-icon-btn">
                                   <i class="tt-icon"><svg><use xlink:href="#icon-like"></use></svg></i>
                                   <span class="tt-text">671</span>
                               </a>
                               <a href="#" class="tt-icon-btn">
                                    <i class="tt-icon"><svg><use xlink:href="#icon-dislike"></use></svg></i>
                                   <span class="tt-text">39</span>
                               </a>
                               <a href="#" class="tt-icon-btn">
                                    <i class="tt-icon"><svg><use xlink:href="#icon-favorite"></use></svg></i>
                                   <span class="tt-text">12</span>
                               </a>
                               <div class="col-separator"></div>
                               <a href="#" class="tt-icon-btn tt-hover-02 tt-small-indent">
                                   <i class="tt-icon"><svg><use xlink:href="#icon-share"></use></svg></i>
                               </a>
                               <a href="#" class="tt-icon-btn tt-hover-02 tt-small-indent">
                                   <i class="tt-icon"><svg><use xlink:href="#icon-flag"></use></svg></i>
                               </a>
                               <a href="#" class="tt-icon-btn tt-hover-02 tt-small-indent">
                                    <i class="tt-icon"><svg><use xlink:href="#icon-reply"></use></svg></i>
                               </a>
                           </div>
                       </div>
                   </div>
            <% } %>

        </div>
        <div class="tt-wrapper-inner">
            <h4 class="tt-title-separator"><span>Youâ€™ve reached the end of replies</span></h4>
        </div>

        <div class="tt-topic-list">
            <div class="tt-item tt-item-popup">
                <div class="tt-col-avatar">
                    <svg class="tt-icon">
                      <use xlink:href="#icon-ava-a"></use>
                    </svg>
                </div>
                <div class="tt-col-message">
                    <h2>Write some comments for this topic :]]</h2>
                </div>
            </div>
        </div>

        <form action="/add-reply-to-topic?topicid=<%=topic._id%>" method="POST">
            <div class="tt-wrapper-inner">
                <div class="pt-editor form-default">
                    <h6 class="pt-title">Post Your Reply</h6>

                    <div class="form-group">
                        <textarea name="comment_content" class="form-control" rows="5" placeholder="Lets get started"></textarea>
                    </div>
                    <div class="pt-row">
                        <div class="col-auto ml-auto">
                            <input type="submit" class="btn btn-secondary btn-width-lg">
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</main>

<%include create_new%>

<%include footer%>
